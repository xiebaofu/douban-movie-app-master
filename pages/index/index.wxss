.menu {
  position: fixed;
  top: 0px;
  width: 100%;
  background: #fff;
  border-bottom: #eee solid 1px;
  z-index: 100000;
}

.tit {
  background: #fff;
  width: 100%;
  font-size: 12px;
  display: flex;
  flex-direction: row;
  padding: 10rpx 0;
  border-bottom: #eee solid 1px;
}

.top-nav {
  white-space: nowrap;
  width: 100%;
  margin: 0 auto;
}

.top-btn {
  display: inline-block;
  padding: 22rpx;
  width: 40%;
  text-align: center;
  font-size: 14px;
}

.top-hoverd-btn {
  color: #42bd56;
  border-bottom: #42bd56 solid 1px;
}

.content {
  display: flex;
  flex-direction: column;
}

.img-poster {
  margin: 1rpx;
  padding: 5rpx;
  text-align: center;
  box-sizing: border-box;
}

.actual-img {
  width: 100px;
  height: 150px;
}

.col3 {
  display: flex;
  flex-direction: column;
  margin: 15rpx 0;
  clear: both;
}

.col3-h {
  border-bottom: #eee dotted 1px;
  padding: 10rpx;
  font-size: 16px;
}

.col3-img {
  display: flex;
  flex-direction: row;
  border-bottom: #ccc dotted 1px;
  padding: 20rpx;
  font-size: 15px;
}

.c3-actual-img {
  width: 100px;
  height: 150px;
}

.col3-img-list {
  width: 100%;
  white-space: nowrap;
  margin: 2rpx;
}

.film-intro {
  width: 50%;
  padding: 0 5px;
}

.film-intro .title {
  font-weight: bold;
}

.film-intro .content {
  font-size: 12px;
  color: #666;
}

.buy-btn {
  width: 60px;
  height: 30px;
  font-size: 13px;
  color: salmon;
  background-color: #fff;
  line-height: 30px;
  vertical-align: middle;
  border: 1px solid salmon;
  margin: auto 0;
  float: right;
}

.nav {
  display: flex;
  flex-flow: row wrap;
}

.tag {
  margin: 3px 5px;
}
